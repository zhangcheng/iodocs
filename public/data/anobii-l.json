                        },
                        {
                            "Name":"additions",
                            "Description":"Editions to add",
                            "Type":"number[]",
                            "Pattern":"[0-9]+",
                            "Required":"N"
                        },
                        {
                            "Name":"deletions",
                            "Description":"Editions to remove",
                            "Type":"number[]",
                            "Pattern":"[0-9]+",
                            "Required":"N"
                        }
                    ]
                }
