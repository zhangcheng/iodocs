{
   "endpoints":[
      {
         "name":"Topics",
         "methods":[
            {
               "MethodName":"List topics",
               "Synopsis":"List all topics",
               "HTTPMethod":"GET",
               "URI":"/topic",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"sort",
                     "Required":"Y",
                     "Default":"editions",
                     "Type":"enumerated",
                     "EnumeratedList": [
                         "editions",
                         "featured",
                         "people",
                         "title",
                         "creator"
                     ],
                     "Description":"How to sort the list of topics"
                  },
                  {
                     "Name":"direction",
                     "Required":"N",
                     "Type":"enumerated",
                     "EnumeratedList": [
                         "default",
                         "asc",
                         "desc"
                     ],
                     "Description":"The direction in which to order the results"
                  },
                  {
                     "Name":"page",
                     "Required":"N",
                     "Type":"integer",
                     "Description":"Which page to return",
                     "Pattern":"[0-9]+"
                  },
                  {
                     "Name":"rows",
                     "Required":"N",
                     "Type":"integer",
                     "Description":"How many results to return (0-100)",
                     "Pattern":"(?:100|[0-9]{0,2})"
                  }
               ]
            },
            {
               "MethodName":"Add topic",
               "Synopsis":"Add a topic",
               "HTTPMethod":"POST",
               "URI":"/topic",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"title",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"A name for the topic"
                  },
                  {
                     "Name":"description",
                     "Required":"N",
                     "Default":"",
                     "Type":"text",
                     "Description":"A description for the topic"
                  }
               ]
            }
         ]
      },
      {
          "name":"Login",
          "methods":[
            {
                "MethodName":"Login",
                "Synopsis":"Login as a site user",
                "HTTPMethod":"POST",
                "URI":"/person/login",
                "RequiresOAuth":"N",
                "parameters":[
                    {
                        "Name":"email",
                        "Required":"Y",
                        "Default":"anobii@mailinator.com",
                        "Type":"email",
                        "Description":"The user's email"
                    },
                    {
                        "Name":"password",
                        "Required":"Y",
                        "Default":"anobii",
                        "Type":"string",
                        "Description":"The user's password"
                    }
                ],
                "headers":{
                    "Content-Type": "application/json"
                }
            }
          ]
      }
   ]
}

